  "metadata": {
    "title": "RHSA-2010:0697: samba security and bug fix update (Critical)",
    "affected": {
      "family": "unix",
      "platform": [
        "Red Hat Enterprise Linux 4",
        "Red Hat Enterprise Linux 5"
      ]
    },
    "reference": [
